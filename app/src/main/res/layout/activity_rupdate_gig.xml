<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".r_updateGig"
    android:background="@color/blue">

    <TextView
        android:id="@+id/r_tv_updateGig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="sans-serif"
        android:text="@string/r_tv_updateGig"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/r_constraintLayout5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/r_constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:background="@drawable/back_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/r_tv_GigPreview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/r_tv_GigPreview_id"
                    android:textColor="@color/Orange"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/r_tv_GigPreview_ID_Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="0000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/r_tv_GigPreview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/r_tv_GigPreview_title"
                    android:textColor="@color/Orange"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/r_et_crateGig_title"
                    android:layout_width="338dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/field_gray"
                    android:ems="10"
                    android:hint="I do paintings"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="1dp"
                    android:paddingRight="1dp" />

                <TextView
                    android:id="@+id/r_tv_GigPreview_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/r_tv_GigPreview_category"
                    android:textColor="@color/Orange"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/r_spin_createGig_category"
                    android:layout_width="267dp"
                    android:layout_height="37dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectt"
                    android:entries="@array/Gig_category" />

                <TextView
                    android:id="@+id/r_tv_GigPreview_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/r_tv_GigPreview_description"
                    android:textColor="@color/Orange"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/r_et_crateGig_description"
                    android:layout_width="357dp"
                    android:layout_height="97dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/field_gray"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Experienced painter and very cheap prices"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine|textCapSentences"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp" />

                <TextView
                    android:id="@+id/r_tv_GigPreview_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/r_tv_GigPreview_location"
                    android:textColor="@color/Orange"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/r_spin_createGig_loation"
                    android:layout_width="267dp"
                    android:layout_height="37dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectt"
                    android:entries="@array/location_spinner" />

                <Button
                    android:id="@+id/r_btn_updateGig"
                    android:layout_width="379dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:onClick="updateGig"
                    android:background="@drawable/fields"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/r_btn_updateGig"
                    app:backgroundTint="@color/Orange" />
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
